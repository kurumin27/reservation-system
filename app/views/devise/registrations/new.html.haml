.Main
  = form_with model: @user, url: user_registration_path, class: 'New_user', local: true do |f|
    .Field
      .Field__box
        = f.label :name, "お名前（フルネーム）", class: "Label"
        %span.Requirement
          必須
      = f.text_field :name, autofocus: true, placeholder: "山田太郎", class: "Field__input"
      .Alert__register
        - if @user.errors.include?(:name)
          = @user.errors.full_messages_for(:name).first
    .Field
      .Field__box
        = f.label :telephone, "お電話番号（ハイフンなし）", class: "Label"
        %span.Requirement
          必須
      = f.text_field :telephone, autofocus: true, placeholder: "09012345678", class: "Field__input"
      .Alert__register
        - if @user.errors.include?(:telephone)
          = @user.errors.full_messages_for(:telephone).first
    .Field
      .Field__box
        = f.label :email, "メールアドレス", class: "Label"
        %span.Requirement
          必須
      = f.email_field :email, autofocus: true, placeholder: "PCまたは携帯のメールアドレス", class: "Field__input"
      .Alert__register
        - if @user.errors.include?(:email)
          = @user.errors.full_messages_for(:email).first
    .Field
      .Field__box
        = f.label :password, "パスワード", class: "Label"
        %span.Requirement
          必須
      = f.password_field :password, placeholder: "６文字以上の半角英数字を入力して下さい", class: "Field__input"
      .Alert__register
        - if @user.errors.include?(:password)
          = @user.errors.full_messages_for(:password).first
    .Field
      .Field__box
        = f.label :password_confirmation, "パスワード確認用", class: "Label"
        %span.Requirement
          必須
      = f.password_field :password_confirmation, placeholder: "確認のためもう一度パスワードを入力して下さい", class: "Field__input"
      .Alert__register
        - if @user.errors.include?(:password_confirmation)
          = @user.errors.full_messages_for(:password_confirmation).first
    .Register
      = f.submit '登録', class: "Register__button"