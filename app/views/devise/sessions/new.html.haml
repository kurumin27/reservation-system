.Main
  = form_with model: @user, url: user_session_path, class: 'Session_user', local: true do |f|
    .alert
      = render 'layouts/notifications'
    .Field
      .Field__box
        = f.label :email, "メールアドレス", class: "Label"
        %span.Requirement
          必須
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PCまたは携帯のメールアドレス", class: "Field__input"
    .Field
      .Field__box
        = f.label :password, "パスワード", class: "Label"
        %span.Requirement
          必須
      = f.password_field :password, placeholder: "６文字以上の半角英数字を入力して下さい", class: "Field__input"
    .Login
      = f.submit "ログイン", class: "Login__button"
    .GuestLogin
      = link_to users_guest_sign_in_path, method: :post do
        = f.button "ゲストログイン（閲覧用）", class: "GuestLogin__button"

