= form_with model: @user, url: user_session_path, id: 'Session_user', class: 'Session_user', local: true do |f|
  .alert
    = render 'layouts/notifications'
  .Field
    = f.label :email, "メールアドレス", class: "Field__item"
    %span.Field__requirement
      必須
    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PCまたは携帯のメールアドレス", class: "Field__registered"
    .alert
      - if @user.errors.include?(:email)
        = @user.errors.full_messages_for(:email).first
  .Field
    = f.label :password, "パスワード", class: "Field__item"
    %span.Field__requirement
      必須
    = f.password_field :password, placeholder: "６文字以上の半角英数字を入力して下さい", class: "Field__registered"
    .alert
      - if @user.errors.include?(:password)
        = @user.errors.full_messages_for(:password).first
  .Login
    = f.submit "ログイン", class: "Login__button"
  .GuestLogin
    = link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: "GuestLogin__button"
